<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <appender name="consola" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{dd-MMM-yyyy | HH:mm:ss} [%thread] %-5level %logger{36} ----- %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="consola" />
  </root>
</configuration>